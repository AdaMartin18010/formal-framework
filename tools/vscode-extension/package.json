{
  "name": "formal-model",
  "displayName": "Formal Model",
  "description": "Formal Model DSL support for Visual Studio Code",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:formalmodel",
    "onCommand:formalModel.compile",
    "onCommand:formalModel.validate",
    "onCommand:formalModel.generateDocs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "formalmodel",
        "aliases": [
          "Formal Model",
          "formalmodel"
        ],
        "extensions": [
          ".fm",
          ".dsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "formalmodel",
        "scopeName": "source.formalmodel",
        "path": "./syntaxes/formalmodel.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "formalmodel",
        "path": "./snippets/formalmodel.json"
      }
    ],
    "commands": [
      {
        "command": "formalModel.compile",
        "title": "Compile DSL",
        "category": "Formal Model"
      },
      {
        "command": "formalModel.validate",
        "title": "Validate Model",
        "category": "Formal Model"
      },
      {
        "command": "formalModel.generateDocs",
        "title": "Generate Documentation",
        "category": "Formal Model"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "formalModel.compile"
        },
        {
          "command": "formalModel.validate"
        },
        {
          "command": "formalModel.generateDocs"
        }
      ],
      "editor/context": [
        {
          "command": "formalModel.compile",
          "group": "1_modification"
        },
        {
          "command": "formalModel.validate",
          "group": "1_modification"
        },
        {
          "command": "formalModel.generateDocs",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
