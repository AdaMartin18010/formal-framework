{
  "benchmarks": {
    "model_verification": {
      "name": "模型验证性能测试",
      "description": "测试模型验证的性能表现",
      "iterations": 10,
      "timeout_seconds": 300,
      "warmup_iterations": 2
    },
    "constraint_solving": {
      "name": "约束求解性能测试",
      "description": "测试约束求解器的性能表现",
      "iterations": 20,
      "timeout_seconds": 180,
      "warmup_iterations": 3
    },
    "model_checking": {
      "name": "模型检查性能测试",
      "description": "测试模型检查的性能表现",
      "iterations": 5,
      "timeout_seconds": 600,
      "warmup_iterations": 1
    },
    "code_generation": {
      "name": "代码生成性能测试",
      "description": "测试代码生成的性能表现",
      "iterations": 15,
      "timeout_seconds": 120,
      "warmup_iterations": 2
    },
    "parallel_verification": {
      "name": "并行验证性能测试",
      "description": "测试并行验证的性能表现",
      "iterations": 8,
      "timeout_seconds": 400,
      "warmup_iterations": 2,
      "parallel_workers": 4
    },
    "memory_intensive": {
      "name": "内存密集型测试",
      "description": "测试内存密集型操作的性能表现",
      "iterations": 5,
      "timeout_seconds": 300,
      "warmup_iterations": 1
    }
  },
  "performance_thresholds": {
    "model_verification": {
      "max_duration_ms": 5000,
      "max_memory_mb": 512,
      "min_throughput": 10,
      "max_error_rate": 5.0
    },
    "constraint_solving": {
      "max_duration_ms": 2000,
      "max_memory_mb": 256,
      "min_throughput": 50,
      "max_error_rate": 2.0
    },
    "model_checking": {
      "max_duration_ms": 10000,
      "max_memory_mb": 1024,
      "min_throughput": 5,
      "max_error_rate": 1.0
    },
    "code_generation": {
      "max_duration_ms": 3000,
      "max_memory_mb": 384,
      "min_throughput": 20,
      "max_error_rate": 3.0
    },
    "parallel_verification": {
      "max_duration_ms": 8000,
      "max_memory_mb": 2048,
      "min_throughput": 15,
      "max_error_rate": 2.0
    },
    "memory_intensive": {
      "max_duration_ms": 15000,
      "max_memory_mb": 4096,
      "min_throughput": 2,
      "max_error_rate": 1.0
    }
  },
  "system_requirements": {
    "min_memory_gb": 4,
    "min_cpu_cores": 2,
    "min_disk_space_gb": 10,
    "supported_os": ["Linux", "macOS", "Windows"],
    "python_version": ">=3.8"
  },
  "monitoring": {
    "sample_interval_ms": 100,
    "memory_check_interval_ms": 1000,
    "cpu_check_interval_ms": 500,
    "enable_profiling": true,
    "profile_output_dir": "./profiles"
  },
  "reporting": {
    "generate_html_report": true,
    "generate_json_report": true,
    "generate_csv_report": true,
    "include_charts": true,
    "chart_types": ["line", "bar", "scatter"],
    "output_directory": "./reports"
  },
  "baseline": {
    "enabled": true,
    "baseline_file": "baseline-results.json",
    "auto_update_baseline": false,
    "regression_threshold_percent": 10.0
  }
}
