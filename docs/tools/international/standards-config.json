  "compliance_thresholds": {
    "full": 0.95,
    "partial": 0.75,
    "minimal": 0.50,
    "non_compliant": 0.0
  },
  "check_categories": {
    "documentation": {
      "name": "文档合规性",
      "description": "检查文档的完整性和规范性",
      "weight": 0.2
    },
    "process": {
      "name": "流程合规性",
      "description": "检查开发和管理流程的合规性",
      "weight": 0.25
    },
    "technical": {
      "name": "技术合规性",
      "description": "检查技术实现的合规性",
      "weight": 0.3
    },
    "security": {
      "name": "安全合规性",
      "description": "检查安全措施的合规性",
      "weight": 0.15
    },
    "quality": {
      "name": "质量合规性",
      "description": "检查质量保证措施的合规性",
      "weight": 0.1
    }
  },
  "verification_methods": {
    "document_review": {
      "name": "文档审查",
      "description": "通过审查文档来验证合规性",
      "automated": false,
      "requires_human": true
    },
    "traceability_analysis": {
      "name": "可追溯性分析",
      "description": "分析需求到实现的可追溯性",
      "automated": true,
      "requires_human": false
    },
    "safety_analysis": {
      "name": "安全分析",
      "description": "进行功能安全分析",
      "automated": false,
      "requires_human": true
    },
    "asil_verification": {
      "name": "ASIL等级验证",
      "description": "验证安全完整性等级的确定",
      "automated": true,
      "requires_human": true
    },
    "security_assessment": {
      "name": "安全评估",
      "description": "评估安全控制措施的有效性",
      "automated": false,
      "requires_human": true
    },
    "data_protection_audit": {
      "name": "数据保护审计",
      "description": "审计数据保护措施的实施",
      "automated": true,
      "requires_human": true
    }
  },
  "evidence_types": {
    "requirements_document": {
      "name": "需求文档",
      "description": "软件需求规格说明文档",
      "format": ["pdf", "docx", "md"],
      "required": true
    },
    "traceability_matrix": {
      "name": "可追溯性矩阵",
      "description": "需求到设计、实现、测试的可追溯性矩阵",
      "format": ["xlsx", "csv", "json"],
      "required": true
    },
    "hazard_analysis": {
      "name": "危险分析",
      "description": "功能安全危险分析报告",
      "format": ["pdf", "docx"],
      "required": true
    },
    "risk_assessment": {
      "name": "风险评估",
      "description": "安全风险评估报告",
      "format": ["pdf", "docx"],
      "required": true
    },
    "safety_goals": {
      "name": "安全目标",
      "description": "功能安全目标定义",
      "format": ["pdf", "docx", "json"],
      "required": true
    },
    "asil_analysis": {
      "name": "ASIL分析",
      "description": "安全完整性等级分析",
      "format": ["pdf", "docx", "json"],
      "required": true
    },
    "verification_plan": {
      "name": "验证计划",
      "description": "功能安全验证计划",
      "format": ["pdf", "docx"],
      "required": true
    },
    "test_results": {
      "name": "测试结果",
      "description": "功能安全测试结果",
      "format": ["pdf", "xlsx", "json"],
      "required": true
    },
    "access_control_policy": {
      "name": "访问控制策略",
      "description": "访问控制策略文档",
      "format": ["pdf", "docx"],
      "required": true
    },
    "user_management": {
      "name": "用户管理",
      "description": "用户管理流程和记录",
      "format": ["pdf", "docx", "json"],
      "required": true
    },
    "audit_logs": {
      "name": "审计日志",
      "description": "系统访问和操作审计日志",
      "format": ["log", "csv", "json"],
      "required": true
    },
    "encryption_policy": {
      "name": "加密策略",
      "description": "数据加密策略文档",
      "format": ["pdf", "docx"],
      "required": true
    },
    "data_classification": {
      "name": "数据分类",
      "description": "数据分类和标记策略",
      "format": ["pdf", "docx", "json"],
      "required": true
    },
    "backup_procedures": {
      "name": "备份程序",
      "description": "数据备份和恢复程序",
      "format": ["pdf", "docx"],
      "required": true
    }
  },
  "reporting": {
    "formats": ["json", "html", "pdf", "xml"],
    "templates": {
      "executive_summary": "executive-summary-template.html",
      "detailed_report": "detailed-report-template.html",
      "compliance_matrix": "compliance-matrix-template.html"
    },
    "sections": [
      "executive_summary",
      "compliance_overview",
      "detailed_findings",
      "recommendations",
      "evidence_attachments"
    ]
  },
  "integration": {
    "ci_cd": {
      "enabled": true,
      "trigger_events": ["pull_request", "merge", "release"],
      "failure_threshold": 0.8
    },
    "monitoring": {
      "enabled": true,
      "check_frequency": "daily",
      "alert_threshold": 0.7
    },
    "notifications": {
      "email": true,
      "slack": true,
      "webhook": true
    }
  }
}
