{
  "community": {
    "name": "正式验证框架社区",
    "description": "致力于推动正式验证技术发展的开放社区",
    "website": "https://community.formal-framework.org",
    "repository": "https://github.com/formal-framework/community",
    "logo": "community-logo.png",
    "primary_color": "#2E7D32",
    "secondary_color": "#1976D2"
  },
  "roles": {
    "contributor": {
      "permissions": [
        "create_issue",
        "submit_pr",
        "comment",
        "participate_discussions"
      ],
      "requirements": [
        "github_account",
        "signed_cla",
        "email_verification"
      ],
      "description": "基础贡献者，可以提交代码和参与讨论"
    },
    "reviewer": {
      "permissions": [
        "review_pr",
        "approve_pr",
        "merge_pr",
        "close_issues",
        "assign_labels"
      ],
      "requirements": [
        "contributor",
        "technical_expertise",
        "community_trust",
        "review_training"
      ],
      "description": "代码审查者，负责审查和合并代码"
    },
    "maintainer": {
      "permissions": [
        "manage_releases",
        "manage_issues",
        "manage_milestones",
        "manage_labels",
        "manage_teams",
        "moderate_discussions"
      ],
      "requirements": [
        "reviewer",
        "long_term_commitment",
        "leadership_skills",
        "project_vision"
      ],
      "description": "项目维护者，负责项目管理和发布"
    },
    "admin": {
      "permissions": [
        "manage_users",
        "manage_roles",
        "system_config",
        "security_management",
        "data_export"
      ],
      "requirements": [
        "maintainer",
        "security_clearance",
        "admin_approval",
        "background_check"
      ],
      "description": "系统管理员，负责系统配置和用户管理"
    }
  },
  "contribution_types": {
    "code": {
      "weight": 10,
      "description": "代码贡献",
      "requirements": [
        "unit_tests",
        "documentation",
        "code_review",
        "style_guide_compliance"
      ],
      "review_criteria": [
        "functionality",
        "performance",
        "security",
        "maintainability"
      ]
    },
    "documentation": {
      "weight": 5,
      "description": "文档贡献",
      "requirements": [
        "accuracy",
        "clarity",
        "completeness",
        "style_consistency"
      ],
      "review_criteria": [
        "technical_accuracy",
        "readability",
        "structure",
        "examples"
      ]
    },
    "bug_report": {
      "weight": 3,
      "description": "Bug报告",
      "requirements": [
        "reproducible",
        "detailed_description",
        "environment_info",
        "expected_behavior"
      ],
      "review_criteria": [
        "severity",
        "reproducibility",
        "impact",
        "priority"
      ]
    },
    "feature_request": {
      "weight": 2,
      "description": "功能请求",
      "requirements": [
        "use_case",
        "rationale",
        "implementation_ideas",
        "alternatives_considered"
      ],
      "review_criteria": [
        "value_proposition",
        "feasibility",
        "complexity",
        "alignment"
      ]
    },
    "translation": {
      "weight": 4,
      "description": "翻译贡献",
      "requirements": [
        "native_language",
        "technical_knowledge",
        "consistency",
        "cultural_adaptation"
      ],
      "review_criteria": [
        "accuracy",
        "fluency",
        "consistency",
        "cultural_appropriateness"
      ]
    },
    "testing": {
      "weight": 6,
      "description": "测试贡献",
      "requirements": [
        "test_coverage",
        "edge_cases",
        "performance_tests",
        "documentation"
      ],
      "review_criteria": [
        "coverage",
        "quality",
        "maintainability",
        "performance"
      ]
    },
    "review": {
      "weight": 3,
      "description": "代码审查",
      "requirements": [
        "technical_expertise",
        "constructive_feedback",
        "timeliness",
        "thoroughness"
      ],
      "review_criteria": [
        "quality",
        "helpfulness",
        "timeliness",
        "constructiveness"
      ]
    },
    "mentoring": {
      "weight": 8,
      "description": "指导贡献",
      "requirements": [
        "expertise",
        "patience",
        "communication_skills",
        "commitment"
      ],
      "review_criteria": [
        "effectiveness",
        "mentee_satisfaction",
        "knowledge_transfer",
        "long_term_impact"
      ]
    }
  },
  "governance": {
    "decision_making": {
      "consensus_threshold": 0.75,
      "voting_period_days": 7,
      "quorum_percentage": 0.3,
      "minimum_participants": 5,
      "appeal_process": true
    },
    "code_of_conduct": {
      "enforcement": "strict",
      "reporting_process": "confidential",
      "consequences": [
        "warning",
        "temporary_ban",
        "permanent_ban"
      ],
      "appeal_process": true,
      "transparency": "anonymous_reports"
    },
    "dispute_resolution": {
      "process": "escalation",
      "levels": [
        "peer_mediation",
        "maintainer_review",
        "admin_decision",
        "external_arbitration"
      ],
      "time_limits": {
        "peer_mediation": "3_days",
        "maintainer_review": "7_days",
        "admin_decision": "14_days"
      }
    }
  },
  "badges": {
    "first_contribution": {
      "name": "首次贡献者",
      "description": "完成第一次贡献",
      "icon": "🌱",
      "color": "#4CAF50"
    },
    "active_contributor": {
      "name": "活跃贡献者",
      "description": "完成10次以上贡献",
      "icon": "🚀",
      "color": "#2196F3"
    },
    "high_reputation": {
      "name": "高声誉用户",
      "description": "获得500分以上声誉",
      "icon": "⭐",
      "color": "#FF9800"
    },
    "reviewer": {
      "name": "审查专家",
      "description": "完成20次以上代码审查",
      "icon": "🔍",
      "color": "#9C27B0"
    },
    "mentor": {
      "name": "指导专家",
      "description": "成功指导5名以上新贡献者",
      "icon": "👨‍🏫",
      "color": "#F44336"
    },
    "documentation_expert": {
      "name": "文档专家",
      "description": "完成10次以上文档贡献",
      "icon": "📚",
      "color": "#607D8B"
    },
    "bug_hunter": {
      "name": "Bug猎人",
      "description": "报告20个以上有效Bug",
      "icon": "🐛",
      "color": "#795548"
    },
    "feature_creator": {
      "name": "功能创造者",
      "description": "实现5个以上新功能",
      "icon": "✨",
      "color": "#E91E63"
    }
  },
  "notifications": {
    "email_templates": {
      "welcome": "welcome-email.html",
      "contribution_submitted": "contribution-submitted.html",
      "contribution_reviewed": "contribution-reviewed.html",
      "badge_earned": "badge-earned.html",
      "role_promoted": "role-promoted.html"
    },
    "preferences": {
      "email_frequency": "immediate",
      "digest_frequency": "weekly",
      "notification_types": [
        "contribution_updates",
        "review_requests",
        "badge_earned",
        "role_changes"
      ]
    }
  },
  "analytics": {
    "tracking": {
      "contribution_metrics": true,
      "user_engagement": true,
      "community_health": true,
      "governance_effectiveness": true
    },
    "reports": {
      "frequency": "monthly",
      "recipients": ["maintainers", "admins"],
      "public_metrics": [
        "total_contributors",
        "monthly_contributions",
        "issue_resolution_time",
        "pr_merge_time"
      ]
    }
  }
}
