{
  "search_apis": {
    "ieee": {
      "base_url": "https://ieeexploreapi.ieee.org/api/v1/search/articles",
      "api_key": "your_ieee_api_key",
      "enabled": true,
      "rate_limit": 200,
      "timeout": 30
    },
    "arxiv": {
      "base_url": "http://export.arxiv.org/api/query",
      "enabled": true,
      "rate_limit": 3,
      "timeout": 30
    },
    "crossref": {
      "base_url": "https://api.crossref.org/works",
      "enabled": true,
      "rate_limit": 50,
      "timeout": 30
    },
    "github": {
      "base_url": "https://api.github.com/search/repositories",
      "token": "your_github_token",
      "enabled": true,
      "rate_limit": 30,
      "timeout": 30
    },
    "google_scholar": {
      "base_url": "https://scholar.google.com/scholar",
      "enabled": false,
      "rate_limit": 10,
      "timeout": 30
    },
    "research_gate": {
      "base_url": "https://www.researchgate.net/publication",
      "enabled": false,
      "rate_limit": 5,
      "timeout": 30
    }
  },
  "industries": {
    "cloud_native": {
      "domains": [
        "kubernetes",
        "microservices",
        "containerization",
        "devops",
        "service_mesh",
        "observability"
      ],
      "required_evidence_per_domain": 3,
      "priority_keywords": [
        "kubernetes",
        "docker",
        "istio",
        "prometheus",
        "grafana",
        "jaeger",
        "helm",
        "operator"
      ],
      "search_queries": [
        "kubernetes formal verification",
        "microservices verification",
        "container security verification",
        "service mesh verification"
      ]
    },
    "finance": {
      "domains": [
        "open_banking",
        "payment_systems",
        "risk_management",
        "compliance",
        "fraud_detection",
        "regulatory_reporting"
      ],
      "required_evidence_per_domain": 3,
      "priority_keywords": [
        "open_banking",
        "pci_dss",
        "iso_20022",
        "fraud_detection",
        "aml",
        "kyc",
        "regulatory_compliance",
        "financial_verification"
      ],
      "search_queries": [
        "financial system verification",
        "payment system security",
        "banking compliance verification",
        "fraud detection verification"
      ]
    },
    "iot": {
      "domains": [
        "mqtt",
        "device_management",
        "edge_computing",
        "security",
        "protocols",
        "data_processing"
      ],
      "required_evidence_per_domain": 3,
      "priority_keywords": [
        "mqtt",
        "coap",
        "edge_computing",
        "iot_security",
        "device_management",
        "protocol_verification",
        "iot_verification"
      ],
      "search_queries": [
        "iot protocol verification",
        "mqtt security verification",
        "edge computing verification",
        "iot device verification"
      ]
    },
    "ai_infrastructure": {
      "domains": [
        "mlops",
        "model_serving",
        "data_pipelines",
        "model_governance",
        "model_monitoring",
        "ai_security"
      ],
      "required_evidence_per_domain": 3,
      "priority_keywords": [
        "tensorflow",
        "pytorch",
        "mlops",
        "model_serving",
        "ai_verification",
        "ml_verification",
        "model_governance"
      ],
      "search_queries": [
        "machine learning verification",
        "ai model verification",
        "mlops verification",
        "ai system verification"
      ]
    },
    "web3": {
      "domains": [
        "blockchain",
        "smart_contracts",
        "defi",
        "nft",
        "consensus",
        "cryptography"
      ],
      "required_evidence_per_domain": 3,
      "priority_keywords": [
        "ethereum",
        "solidity",
        "defi",
        "smart_contracts",
        "blockchain_verification",
        "consensus_verification",
        "cryptographic_verification"
      ],
      "search_queries": [
        "blockchain verification",
        "smart contract verification",
        "defi verification",
        "cryptocurrency verification"
      ]
    }
  },
  "quality_thresholds": {
    "min_relevance_score": 0.7,
    "min_publication_year": 2018,
    "max_publication_year": 2024,
    "min_abstract_length": 100,
    "max_abstract_length": 2000,
    "required_verification_sources": 2,
    "min_citation_count": 0,
    "max_publication_age_years": 6
  },
  "evidence_types": {
    "academic_paper": {
      "weight": 1.0,
      "description": "学术论文",
      "sources": ["ieee", "arxiv", "crossref"],
      "min_relevance": 0.8
    },
    "industry_report": {
      "weight": 0.9,
      "description": "行业报告",
      "sources": ["industry", "github"],
      "min_relevance": 0.7
    },
    "standard_document": {
      "weight": 1.0,
      "description": "标准文档",
      "sources": ["ieee", "iso", "nist"],
      "min_relevance": 0.9
    },
    "case_study": {
      "weight": 0.8,
      "description": "案例研究",
      "sources": ["industry", "github"],
      "min_relevance": 0.6
    },
    "technical_documentation": {
      "weight": 0.7,
      "description": "技术文档",
      "sources": ["github", "industry"],
      "min_relevance": 0.5
    },
    "benchmark_result": {
      "weight": 0.8,
      "description": "基准测试结果",
      "sources": ["github", "industry"],
      "min_relevance": 0.6
    },
    "certification": {
      "weight": 0.9,
      "description": "认证文档",
      "sources": ["industry", "standard"],
      "min_relevance": 0.8
    },
    "white_paper": {
      "weight": 0.8,
      "description": "白皮书",
      "sources": ["industry", "academic"],
      "min_relevance": 0.7
    }
  },
  "verification": {
    "enabled": true,
    "methods": [
      "url_accessibility",
      "doi_validation",
      "content_analysis",
      "source_reputation"
    ],
    "timeout": 30,
    "retry_attempts": 3
  },
  "reporting": {
    "formats": ["json", "html", "pdf", "markdown"],
    "sections": [
      "executive_summary",
      "industry_overview",
      "capability_analysis",
      "evidence_details",
      "recommendations"
    ],
    "templates": {
      "executive_summary": "executive-summary-template.html",
      "detailed_report": "detailed-report-template.html"
    }
  },
  "automation": {
    "scheduled_runs": {
      "enabled": true,
      "frequency": "weekly",
      "time": "02:00"
    },
    "incremental_updates": {
      "enabled": true,
      "check_interval_hours": 24
    },
    "notifications": {
      "email": true,
      "slack": true,
      "webhook": true
    }
  }
}
