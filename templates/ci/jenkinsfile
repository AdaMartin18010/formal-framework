pipeline {
    agent any
    environment {
        RUST_BACKTRACE = '1'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'cargo build --release'
            }
        }
        stage('Test') {
            steps {
                sh 'cargo test --all-features'
            }
        }
        stage('Lint') {
            steps {
                sh 'cargo clippy --all-targets --all-features -- -D warnings'
                sh 'cargo audit'
            }
        }
        stage('Docker Build & Push') {
            steps {
                script {
                    dockerImage = docker.build("${env.JOB_NAME}:latest")
                    docker.withRegistry('', 'docker-hub-credentials') {
                        dockerImage.push('latest')
                    }
                }
            }
        }
    }
} 